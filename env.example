# JWT Secret Key (REQUIRED)
# Generate a secure secret key for JWT token signing
JWT_SECRET_KEY=your-secure-secret-key-here

# Server Configuration
PORT=8000
LOG_LEVEL=info

# CORS Configuration
ALLOWED_CORS_ORIGIN=*
ALLOWED_CORS_METHOD=*

